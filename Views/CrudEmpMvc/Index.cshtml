@model IEnumerable<WebApi.Models.Employee>
@{
    ViewBag.Title = "Employee Details";
}
<h2>Employee Details</h2>

@if (TempData["alertMessage"]!=null)
{
    <script type="text/javascript">
       alert('@TempData["alertMessage"]');
    </script>
}
@using (Html.BeginForm("EmpSearch", "CrudEmpMvc", FormMethod.Post))
{
<div>
    <div class="col-lg-6">
        <p>
            <h3> @Html.ActionLink("Create New", "Create")</h3>
        </p>
    </div>
    <div class="col-lg-6" style="margin-top: 21px;">
        <label>Search:</label>
        @Html.TextBox("EmpName", "", new { id = "Emp_NEmpNameame" })

        <input type="submit" id="btnsubmit" value="Search" />
        </div>
    </div>
    }
    <table class="table">
        <tr>
            <th>
                EmpID
            </th>
            <th>
                EmpName
            </th>
            <th>
                Gender
            </th>
            <th>
                Age
            </th>
            <th>
                Designation
            </th>
            <th>
                Salary
            </th>
            <th>Actions</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Emp_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Emp_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Emp_gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Emp_age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Emp_designation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Emp_Salary)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { Emp_id = item.Emp_id }) |
                    @Html.ActionLink("Details", "Details", new { Emp_id = item.Emp_id }) |
                    @Html.ActionLink("Delete", "Delete", new { Emp_id = item.Emp_id })
                </td>
            </tr>
        }

    </table>
